{
  "name": "nextlevel",
  "license": "MIT",
  "version": "0.0.2",
  "description": "Skeleton build tool learning using: lerna monorepo, webpack2, nodejs, hot reloader 3, react router 4, preact, jsdom, enzyme, babel6 loader, async extension point bootstrap, flowtypes, eslint autofixing...",
  "repository": "git@github.com:aretecode/nextlevel.git",
  "scripts": {
    "build": "lerna exec npm run build",
    "buildp": "lerna exec npm run buildp",
    "test": "cd packages && cd backend && npm t && cd ../frontend && npm t",
    "test-lerna": "lerna exec npm run test --single-run",
    "bench": "cd packages && cd frontend && npm run bench",
    "bench-lerna": "lerna exec npm run bench",
    "flow": "flow; test $? -eq 0 -o $? -eq 2"
  },
  "devDependencies": {
